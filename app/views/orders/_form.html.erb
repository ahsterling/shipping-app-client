<div class='row new-order'>
  <hr>
  <div class="col-lg-2">
    <h4 class='brand'>Address</h4>
    <%= render current_order.address %>
  </div>
  <%= form_for current_order do |f| %>
    <div class='col-lg-5'>
      <h4 class='brand'>Credit Card</h4>
      <%= f.fields_for :credit_card do |cc| %>
        <div class='form-group'>
          <%= cc.label :name do %>
            Name
            <%= cc.text_field :name, class: "form-control" %>
          <% end %>
        </div>

        <div class='form-group'>
          <%= cc.label :number do %>
            Number
            <%= cc.text_field :number, class: "form-control" %>
          <% end %>
        </div>

        <div class='form-group'>
          <%= cc.label :expiration do %>
            Expiration
            <%= cc.text_field :expiration, class: "form-control" %>
            <p class="help-block">(mm/yy)</p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class='col-lg-5'>
      <h4 class='brand'>Shipping Option</h4>
      <div class='shipping-options well'>
        <h3>USPS</h3>
        <%#= form_tag cart_path, method: :put do %>
          <% @usps.each do |rate| %>
            <%= radio_button_tag "shipping", rate[1], false, class: "shipping-button" %>
            <span>
              <%= rate[0] %>
              <%= format_money(rate[1]) %>
            </span><br>
          <% end %>
          <h3>FEDEX</h3>
          <% @fedex.each do |rate| %>
            <%= radio_button_tag "shipping", rate[1], false, class: "shipping-button" %>
            <span>
              <%= rate[0] %>:
              <%= format_money(rate[1]) %>
            </span><br>
          <% end %>
          <%= submit_tag "Update Total", class: "btn btn-default" %>

      </div>
      <%= f.submit "Checkout", class: "btn btn-success btn-block" %>
    </div>

  <% end %>
</div>
